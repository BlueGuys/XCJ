<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ds200"
    android:layout_height="@dimen/ds60"
    android:background="@drawable/bg_button_market_blue"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="0dp"
        android:layout_height="@dimen/ds60"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:background="@drawable/bg_button_market_white"
        android:gravity="center"
        android:text="全部"
        android:textColor="@color/market_blue_bg" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="0dp"
        android:layout_height="@dimen/ds60"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="自选"
        android:textColor="@color/white" />

</LinearLayout>