<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_bg_a"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:background="#007AFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds380">

            <RelativeLayout
                android:id="@+id/top_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds80"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/ds10"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/ds60"
                    android:layout_height="@dimen/ds60"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ds50"
                    android:layout_marginRight="@dimen/ds6"
                    android:src="@drawable/icon_account_logout" />

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/logo"
                    android:text="hongyan@163.com"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/logo"
                    android:padding="@dimen/ds12"
                    android:text="点击登录"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/ds100"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="烯财经"
                    android:textColor="@color/white"
                    android:textSize="19dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/ds30"
                    android:text="专业     链接价值"
                    android:textColor="@color/white"
                    android:textSize="21dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.hongyan.xcj.widget.view.ItemCommonClickView
                android:id="@+id/linear_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="我的收藏" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ds2"
                android:layout_marginLeft="@dimen/ds30"
                android:layout_marginRight="@dimen/ds30"
                android:background="@color/c_bg_line_b" />

            <com.hongyan.xcj.widget.view.ItemCommonClickView
                android:id="@+id/linear_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="行情自选" />

            <View
                android:id="@+id/line_nick"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ds2"
                android:background="@color/c_bg_line_b" />

            <com.hongyan.xcj.widget.view.ItemCommonClickView
                android:id="@+id/linear_set_nike_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="设置昵称" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ds2"
                android:background="@color/c_bg_line_b" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ds20"
                android:background="@color/c_bg_a" />

            <com.hongyan.xcj.widget.view.ItemCommonClickView
                android:id="@+id/linear_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="清除缓存" />

            <View
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ds2"
                android:layout_marginLeft="@dimen/ds30"
                android:layout_marginRight="@dimen/ds30"
                android:background="@color/c_bg_line_b" />

            <com.hongyan.xcj.widget.view.ItemCommonClickView
                android:id="@+id/linear_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="退出登录" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ds2"
                android:background="@color/c_bg_line_b" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>