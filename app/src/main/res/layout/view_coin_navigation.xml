<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#ff007AFF"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/ds30"
    android:paddingRight="@dimen/ds30">

    <ImageView
        android:id="@+id/icon_navigation_back"
        android:layout_width="@dimen/ds60"
        android:paddingRight="@dimen/ds36"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_arrow_back"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon_navigation_left"
            android:layout_width="@dimen/ds24"
            android:layout_height="@dimen/ds40"
            android:src="@drawable/icon_navigation_left" />

        <TextView
            android:id="@+id/tv_coin_navigation_title"
            android:layout_width="@dimen/ds200"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/icon_navigation_right"
            android:layout_width="@dimen/ds24"
            android:layout_height="@dimen/ds40"
            android:src="@drawable/icon_navigation_right" />
    </LinearLayout>

    <ImageView
        android:id="@+id/icon_navigation_refresh"
        android:layout_width="@dimen/ds40"
        android:layout_height="@dimen/ds40"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ds30"
        android:src="@drawable/icon_navigation_refresh" />

    <ImageView
        android:id="@+id/icon_navigation_add"
        android:layout_width="@dimen/ds40"
        android:layout_height="@dimen/ds40"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/icon_navigation_refresh"
        android:src="@drawable/icon_navigation_add" />

</RelativeLayout>
