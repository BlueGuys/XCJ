<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds150"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/ds10"
    android:paddingLeft="@dimen/ds30"
    android:paddingRight="@dimen/ds30"
    android:paddingTop="@dimen/ds16">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/market_logo"
                android:layout_width="@dimen/ds60"
                android:layout_height="@dimen/ds60"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/market_currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds16"
                android:text="BTC"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/market_currency_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds30"
            android:gravity="center"
            android:lines="1"
            android:text="今日成交量/额 44.53万/303.14亿"
            android:textColor="#999999"
            android:textSize="11dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/market_currency_price_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds10"
            android:text="$66792"
            android:textColor="#007AFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/market_currency_price_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds10"
            android:layout_marginTop="@dimen/ds10"
            android:text="¥23243.33"
            android:textColor="#888888"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/market_currency_change_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds10"
            android:background="@drawable/bg_market_item_button_red"
            android:gravity="center"
            android:paddingBottom="@dimen/ds6"
            android:paddingLeft="@dimen/ds14"
            android:paddingRight="@dimen/ds14"
            android:paddingTop="@dimen/ds6"
            android:text="-1.25%"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>