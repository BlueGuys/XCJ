<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="@dimen/ds30">

    <com.hongyan.xcj.modules.coin.widget.CoinViewHeader
        android:id="@+id/coin_view_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds60"
        android:background="#54565d"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ds30"
        android:paddingRight="@dimen/ds30">

        <TextView
            android:id="@+id/tv_chart_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_chart_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_chart_high"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_chart_low"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_chart_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hongyan.xcj.modules.coin.mychart.MyCombinedChart
            android:id="@+id/coin_detail_chartK"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds400"
            android:layout_marginBottom="-3dp" />


        <com.hongyan.xcj.modules.coin.mychart.MyCombinedChart
            android:id="@+id/coin_detail_volume"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds400"
            android:layout_below="@id/coin_detail_chartK"
            android:layout_marginTop="-3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds2"
            android:layout_centerVertical="true"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/ds30"
            android:paddingTop="@dimen/ds10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="涨幅："
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_chart_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1.75"
                android:textColor="@color/red"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds10"
                android:text="振幅："
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_chart_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.05%"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>