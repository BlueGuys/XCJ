<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="@dimen/ds30">

    <com.hongyan.xcj.modules.coin.widget.CoinViewHeader
        android:id="@+id/coin_view_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hongyan.xcj.modules.coin.mychart.MyCombinedChart
            android:id="@+id/coin_detail_chartK"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds400" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds2"
            android:background="@color/white" />

        <com.hongyan.xcj.modules.coin.mychart.MyCombinedChart
            android:id="@+id/coin_detail_volume"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds400" />
    </LinearLayout>
</LinearLayout>