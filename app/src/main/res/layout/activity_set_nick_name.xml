<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xcj_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/ds30"
        android:paddingRight="@dimen/ds30">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds70"
            android:background="@drawable/bg_search_edit_text"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:paddingLeft="@dimen/ds14"
            android:textCursorDrawable="@drawable/shape_edit_text_background" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_set_nick_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginRight="@dimen/ds30"
        android:layout_marginTop="@dimen/ds40"
        android:background="@drawable/bg_edit_text_set_nick_name"
        android:hint="请输入您的昵称"
        android:lines="1"
        android:textCursorDrawable="@drawable/shape_edit_text_background"
        android:textSize="16dp" />

</LinearLayout>
